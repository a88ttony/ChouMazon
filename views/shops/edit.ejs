<%- include("../partials/header") %>


    <h1 style="text-align: center;">Edit <%= shop.name %></h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/shops/<%= shop._id %>/?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="shop[name]" value="<%= shop.name %>" placeholder="name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="shop[price]" value="<%= shop.price %>" placeholder="price" min="0">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="shop[image]" value="<%= shop.image %>" placeholder="image url">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="shop[writer]" value="<%= shop.writer %>" placeholder="writer's name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="shop[publisher]" value="<%= shop.publisher %>" placeholder="publisher's name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="shop[isbn]" value="<%= shop.isbn %>" placeholder="ISBN/ISSN">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="shop[description]" value="<%= shop.description %>" placeholder="description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">submit!</button>
            </div>
        </form>
        <a href="/shops">Go back</a>
    </div>


<%- include("../partials/footer") %>